# ============================================
# CONFIGURAÇÃO MÍNIMA PARA DESENVOLVIMENTO LOCAL
# ============================================
# Apenas SECRET_KEY é obrigatório para rodar localmente
# As demais configurações são opcionais

# Chave secreta (OBRIGATÓRIO)
# Gere com: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this

# Configurações básicas
PORT=5000
DEBUG=True
USE_SQLITE_LOCALLY=True

# ============================================
# BANCO DE DADOS EXTERNO (OAMD)
# ============================================
# Necessário apenas para funcionalidades de integração
# Requer túnel SSH ativo (execute: python abrir_tunel.py)

# Após abrir o túnel, descomente a linha abaixo:
# EXTERNAL_DB_URL=postgresql://cs_pacto:pacto@db@localhost:5433/oamd

# ============================================
# AUTENTICAÇÃO (OPCIONAL)
# ============================================
# Auth0 - Deixe comentado para desenvolvimento local sem autenticação
# AUTH0_ENABLED=True
# AUTH0_DOMAIN=seu-dominio.auth0.com
# AUTH0_CLIENT_ID=seu-client-id
# AUTH0_CLIENT_SECRET=seu-client-secret
# AUTH0_BASE_URL=http://localhost:5000

# ============================================
# GOOGLE OAUTH (OPCIONAL)
# ============================================
# Para integração com Google Calendar
# GOOGLE_CLIENT_ID=seu-google-client-id
# GOOGLE_CLIENT_SECRET=seu-google-client-secret
# GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# ============================================
# GEMINI (GOOGLE AI STUDIO)
# ============================================
# GEMINI_API_KEY=sua-api-key
# GEMINI_MODEL=gemini-1.5-flash

# ============================================
# CLOUDFLARE R2 STORAGE (OPCIONAL)
# ============================================
# Para upload de arquivos em produção
# CLOUDFLARE_ENDPOINT_URL=https://seu-account-id.r2.cloudflarestorage.com
# CLOUDFLARE_ACCESS_KEY_ID=seu-access-key-id
# CLOUDFLARE_SECRET_ACCESS_KEY=seu-secret-access-key
# CLOUDFLARE_BUCKET_NAME=nome-do-bucket

# ============================================
# CONFIGURAÇÕES AVANÇADAS (OPCIONAL)
# ============================================

# Banco de dados PostgreSQL (produção)
# DATABASE_URL=postgresql://usuario:senha@localhost:5432/nome_do_banco
# USE_SQLITE_LOCALLY=False

# Cache Redis (produção)
# CACHE_TYPE=redis
# CACHE_REDIS_URL=redis://localhost:6379/0

# Monitoramento Sentry (produção)
# SENTRY_DSN=https://seu-dsn@sentry.io/projeto-id
# SENTRY_ENVIRONMENT=development

# Feature toggles
# USE_OPTIMIZED_DASHBOARD=false

# Segurança
# RATE_LIMIT_GLOBAL=100

# ============================================
# INSTRUÇÕES
# ============================================
# 1. Copie este arquivo: cp .env.example .env
# 2. Gere SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# 3. Cole a chave gerada no campo SECRET_KEY acima
# 4. Execute: python run.py
